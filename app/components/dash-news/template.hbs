<div style="background-color:#f6f6f6; padding:6px; margin:10px; font-size:85%;">
	<div style="display:inline-block; text-transform: uppercase;">NEWS</div>
	<div style="display:inline-block; text-transform: uppercase; float:right;">
		<a class="newsModal" style="color:#1b73d5;cursor:pointer;">Add New</a>
	</div>
</div>

<div style="height:200px; overflow-y: auto;">
	<div style="padding:6px; margin:10px;font-size:75%;">
		{{#each componentNews as |item|}}
			<strong>{{item.date}}</strong> 
			<br>
			{{item.content}} 
			<a style="color:#1b73d5;float:right;cursor:pointer;" {{action 'compDelNews' item}}>Delete</a><hr />
		{{/each}}
	</div>
</div>

{{news-modal compAction='compAddNews'}}

<script>
  $(document).ready(function(){
    $(".newsModal").click(function(){
        $("#newsModal").modal({backdrop: 'static'});
    });
  });
</script>