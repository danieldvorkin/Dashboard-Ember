<div style="display:inline-block;padding-left:5px;padding-right:0px;padding-bottom:15px;padding-top:15px;width:100%;background-color:#fff;border-bottom:1px solid #cccccc;">
  <div>
    <div style="display:inline-block; vertical-align: top; text-transform: uppercase;"> Client Roster</div>
    <div style="display:inline-block;vertical-align:top;text-transform:uppercase;color:#1b73d5;float:right;">
      <a class="rosterModal" style="color:#1b73d5;font-size:85%;cursor:pointer;">Add New</a>
    </div>
  </div>
</div>
<div>
  <div style="height:192px; overflow-y: auto;">
    <div style="padding:6px; margin:10px;font-size:85%;">
      {{#each componentRosters as |roster|}}
        <strong>{{roster.name}}</strong>
        <div style="float:right; display:inline-block;">
          <a href="#" style="margin-top:10px;"><img src="assets/images/con_ic_email.png"></a>
          <a href="#" style="margin-top:10px;"><img src="assets/images/con_ic_call.png"></a>
          <a href="#" style="margin-top:10px;"><img src="assets/images/con_ic_videoconf.png"></a>
        </div>
        <br>
        <div style="font-size:75%;">Email: {{roster.email}}</div>
        <a style="color:#1b73d5;float:left;cursor:pointer;" {{action 'compDelRoster' roster}}>Delete</a>
        <hr />
      {{/each}}
    </div>
  </div>
</div>

{{roster-modal compAction='compAddRoster'}}

<script>
  $(document).ready(function(){
    $(".rosterModal").click(function(){
        $("#rosterModal").modal({backdrop: 'static'});
    });
  });
</script>